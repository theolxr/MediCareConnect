@model MediCareConnect.Models.Appointment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Appointment";
}
<div class="container mt-4">
    <h2 class="text-danger mb-4">Delete Appointment</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this appointment?
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <p><strong>Date &amp; Time:</strong> @Model.AppointmentDate.ToString("g")</p>
            <p><strong>Doctor:</strong> @Model.Doctor?.FullName</p>
            <p><strong>Patient:</strong> @Model.Patient?.FullName</p>
            <p><strong>Status:</strong> @Model.Status</p>
        </div>
    </div>
    <form asp-action="DeleteAppointment" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete Appointment</button>
        <a asp-action="Appointments" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
