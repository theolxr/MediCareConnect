@model MediCareConnect.Models.Doctor
@{
    ViewBag.Title = "Add New Doctor";
}

<h2>Add New Doctor</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Specialty"></label>
        <input asp-for="Specialty" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="ProfilePictureUrl"></label>
        <input asp-for="ProfilePictureUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
