@model MediCareConnect.Models.AppointmentRescheduleViewModel
@{
    ViewData["Title"] = "Reschedule Appointment";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Reschedule Appointment</h2>
    <div class="card">
        <div class="card-header">New Appointment Date and Time</div>
        <div class="card-body">
            <form asp-action="Reschedule" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AppointmentId" />
                <div class="mb-3">
                    <label asp-for="NewAppointmentDate" class="form-label"></label>
                    <input asp-for="NewAppointmentDate" class="form-control" type="datetime-local"
                           value="@Model.NewAppointmentDate.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="NewAppointmentDate" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Reschedule Appointment</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
