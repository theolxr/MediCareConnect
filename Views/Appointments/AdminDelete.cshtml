@model MediCareConnect.Models.Appointment
@{
    ViewBag.Title = "Delete Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4">Delete Appointment</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this appointment?
    </div>
    <div class="card">
        <div class="card-body">
            <p><strong>Date and Time:</strong> @Model.AppointmentDate.ToString("g")</p>
            <p><strong>Doctor:</strong> @Model.Doctor?.FullName</p>
            <p><strong>Patient:</strong> @Model.Patient?.FullName</p>
            <p><strong>Notes:</strong> @Model.Notes</p>
            <p><strong>Status:</strong> @Model.Status</p>
        </div>
    </div>
    <form asp-action="AdminDelete" asp-route-id="@Model.Id" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete Appointment</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
