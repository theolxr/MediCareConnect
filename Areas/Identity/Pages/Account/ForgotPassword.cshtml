@page
@model MediCareConnect.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Forgot Password</h2>
    <div class="card" style="max-width: 400px; margin: 0 auto;">
        <div class="card-body">
            <p>Please enter your email address. We will send you an email to reset your password.</p>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Send Reset Link</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
